<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 헤더: 뒤로가기 버튼 -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/abc_action_bar_up_description"
            android:padding="8dp"
            android:src="@drawable/ic_chevron_left_purple"/>
    </FrameLayout>

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="용량정리"
        android:textColor="#660099"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"/>

    <!-- 아이콘 -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_bg"
        android:padding="12dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- 설명 -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="큰 파일 · 중복 사진 · 오래된 다운로드를\n안전하게 정리합니다."
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- 요약 카드 3개 -->
    <LinearLayout
        android:id="@+id/summaryRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 큰 파일 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/shadow"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="큰 파일"
                android:textColor="#660099"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvLargeFiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0개"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- 중복 사진 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/shadow"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복 사진"
                android:textColor="#660099"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvDuplicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0개"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- 오래된 파일 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/shadow"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오래된 파일"
                android:textColor="#660099"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0개"
                android:textStyle="bold"
                android:textColor="#660099"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 스캔 버튼 -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="용량 스캔 시작"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#660099"
        app:layout_constraintTop_toBottomOf="@id/summaryRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <!-- 결과 리스트 -->
    <ListView
        android:id="@+id/listResults"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnScan"
        app:layout_constraintBottom_toTopOf="@id/btnClean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 정리 버튼 -->
    <Button
        android:id="@+id/btnClean"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="선택 항목 정리"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#660099"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
