<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:background="@color/pastel_bg"
    tools:context=".UsageGuideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="48dp">

        <!-- ✅ 헤더: 뒤로가기 + 중앙 타이틀/부제/칩 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">
            <LinearLayout
                android:id="@+id/title_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 사용법 안내"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#660099"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="처음이라도 금방 익혀요 ✨"
                    android:textSize="14sp"
                    android:textColor="@color/pastel_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_chip_soft"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="가이드 3분 컷 ⏱️"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ✨ Step 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_gradient_lavender"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <!-- step number chip -->
                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_badge_pill_pink"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/pastel_text_primary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="실시간 보호 기능 켜기"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="백그라운드에서 스마트하게 파일 감시 😎"
                            android:textSize="12sp"
                            android:textColor="@color/pastel_text_secondary" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_protect"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_dashed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="MyPage에서 ‘실시간 보호’ 스위치를 켜면 즉시 감시가 시작돼요. 앱을 종료해도 유지됩니다."
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/pastel_text_primary" />

                <!-- tip -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡"
                        android:textSize="18sp"
                        android:layout_marginRight="6dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="배터리 최적화를 위해 시스템이 앱을 제한하면 감시가 일시 중지될 수 있어요. 필요 시 ‘백그라운드 제한 해제’ 안내 메시지를 따라주세요."
                        android:textSize="13sp"
                        android:textColor="@color/pastel_text_primary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✨ Step 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_gradient_mint"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_badge_pill_mint"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/pastel_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="앱 알림 및 권한 설정"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="필수 권한은 꼭! 알림도 놓치지 않게 🔔"
                            android:textSize="12sp"
                            android:textColor="@color/pastel_text_secondary" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ghost_shield"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_dashed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="실시간 보호에는 ‘파일 접근’ 등 필수 권한이 필요해요. 허용되지 않았다면 MyPage 설정에서 ‘권한 허용’으로 활성화해 주세요."
                    android:textSize="15sp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/pastel_text_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="✅ 중요 알림은 ‘허용’, 알림 채널에서 위험 알림을 ON 권장"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/pastel_purple_strong"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ✨ Step 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_gradient_sky"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_badge_pill_sky"
                        android:gravity="center"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/pastel_text_primary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="검사 결과 확인"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="알림으로 빠르게 확인, 로그에서 한눈 정리 📋"
                            android:textSize="12sp"
                            android:textColor="@color/pastel_text_secondary" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ghost_angry"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divider_dashed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="탐지된 악성코드는 Security 화면의 로그에서 실시간으로 확인할 수 있어요. 결과는 알림으로도 안내됩니다."
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/pastel_text_primary" />

                <!-- checklist -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="◻ ‘위험 파일 격리’ 또는 ‘삭제’로 안전 조치"
                        android:textSize="13sp"
                        android:textColor="@color/pastel_text_primary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="◻ 오탐 의심 시 예외 목록에 추가"
                        android:textSize="13sp"
                        android:textColor="@color/pastel_text_primary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="◻ 로그는 주기적으로 정리하여 가독성 유지"
                        android:textSize="13sp"
                        android:textColor="@color/pastel_text_primary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
