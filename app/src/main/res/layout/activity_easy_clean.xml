<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <!-- 상단 앱바: 뒤로가기 + 타이틀 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:navigationIcon="@drawable/ic_chevron_left_purple"
        app:title="간편정리"
        app:titleTextColor="#660099"
        app:titleCentered="true"
        app:elevation="4dp"/>

    <!-- 본문 스크롤 (버튼 포함, 하단 고정 없음) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">

            <!-- 상단 인트로 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIntro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#F7ECFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_bg"
                        android:padding="10dp"
                        android:src="@drawable/ic_easy"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="캐시 · 임시파일을 한 번에 정리"
                            android:textStyle="bold"
                            android:textColor="#2B2B2B"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빠르게 속도를 올리고 저장공간을 확보하세요."
                            android:textColor="#6A6A6A"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 요약 2분할 카드 -->
            <LinearLayout
                android:id="@+id/summaryRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/cardIntro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 정리 가능 캐시 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#F9F2FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정리 가능 캐시"
                            android:textColor="#660099"
                            android:textSize="12sp"/>

                        <!-- 코드와 일치하도록 ID 변경 -->
                        <TextView
                            android:id="@+id/tvCacheSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0 MB"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="#660099"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 임시파일 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#F9F2FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="임시파일"
                            android:textColor="#660099"
                            android:textSize="12sp"/>

                        <!-- 코드와 일치하도록 ID 변경 -->
                        <TextView
                            android:id="@+id/tvTempCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0개"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="#660099"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- 진행 상태 (Activity에서 progressWrap visibility 토글) -->
            <LinearLayout
                android:id="@+id/progressWrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/summaryRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정리 중..."
                    android:textColor="#6A6A6A"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <!-- 결과 메시지 (Activity에서 tvResult로 세팅) -->
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="캐시와 임시파일 정리가 완료됐어요." />

            <!-- 실행 버튼 (코드와 일치하게 ID 수정) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCleanNow"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:text="간편정리 실행"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/progressWrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#FFFFFF"
                app:backgroundTint="#660099"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
