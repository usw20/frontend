<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F4">

    <!-- 뒤로가기 (상단 고정) -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp" />

    <!-- 회원가입 카드: 화면 '정가운데' -->
    <androidx.cardview.widget.CardView
        android:id="@+id/signupCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">   <!-- ✅ 세로 중앙 정렬 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#660099"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <EditText
                android:id="@+id/signupEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="이메일"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/signupPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="전화번호(숫자만)"
                android:inputType="phone"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/signupPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="비밀번호"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/signupConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="비밀번호 확인"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="가입하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#660099"
                android:elevation="6dp"
                android:background="@drawable/rounded_button_background"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 유령: 카드 상단에 살짝 겹치게 + 세로 중앙 배치 보조 -->
    <ImageView
        android:id="@+id/signupGhost"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_protect"
        android:contentDescription="회원가입 유령"
        android:scaleType="centerInside"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toTopOf="@id/signupCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-24dp"
    android:elevation="12dp"
    android:translationZ="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
