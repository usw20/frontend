<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <!-- 상단 유령 이미지 -->
    <ImageView
        android:id="@+id/signupGhost"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_protect"
        android:contentDescription="회원가입 유령"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 회원가입 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/signupCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/signupGhost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#660099"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- 이메일 입력 -->
            <EditText
                android:id="@+id/signupEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="이메일"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />



            <EditText
                android:id="@+id/signupPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="전화번호(숫자만)"
                android:inputType="phone"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 비밀번호 입력 -->
            <EditText
                android:id="@+id/signupPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="비밀번호"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- 비밀번호 확인 입력 -->
            <EditText
                android:id="@+id/signupConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="비밀번호 확인"
                android:drawablePadding="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_input_background"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- 가입 버튼 -->
            <Button
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="가입하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#660099"
                android:elevation="6dp"
                android:background="@drawable/rounded_button_background"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
