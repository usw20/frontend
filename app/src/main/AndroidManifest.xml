<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 네트워크/알림 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <!-- Android 13+ 알림 권한: 하위 버전에선 무시됨 -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Phantom"
        android:largeHeap="true">

        <!-- 런처 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인/회원가입/계정 -->
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".SignUpActivity" android:exported="false" />
        <activity
            android:name=".FindIdActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 앱 화면 -->
        <activity android:name=".MainPageActivity" android:exported="false" />
        <activity android:name=".SecurityActivity" android:exported="false" />
        <activity android:name=".MypageActivity" android:exported="false" />
        <activity android:name=".AppScanActivity" android:exported="false" />
        <activity android:name=".ScanResultActivity" android:exported="false" />
        <activity android:name=".AppDetailActivity" android:exported="false" />
        <activity
            android:name=".SpamCheckActivity"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:exported="false" />

        <!-- ✅ 정보 호스트 (사용법/보안상식) -->
        <activity
            android:name=".InfoHostActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 봇 -->
        <activity
            android:name=".BotActivity"
            android:exported="false"
            android:parentActivityName=".MainPageActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- ✅ Notification Listener Service (알림 텍스트 감시) -->
        <service
            android:name=".notification.MyNotificationListener"
            android:exported="false"
            android:label="Phantom Notification Listener"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- ✅ '텍스트 복사' 액션용 브로드캐스트 리시버 -->
        <receiver
            android:name=".notification.CopyActionReceiver"
            android:exported="false" />

        <!-- ✅ 새로운 앱 설치 감지 브로드캐스트 리시버 (NewAppReceiver) -->
        <receiver
            android:name=".NewAppReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- ✅ 앱 설치 감지 브로드캐스트 리시버 (PackageInstallationReceiver - 백업용) -->
        <receiver
            android:name=".util.PackageInstallationReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="998">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- ✅ 앱 설치 감시 포그라운드 서비스 (ScanMonitorService) -->
        <service
            android:name=".ScanMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- ✅ 실시간 보호 서비스 (ProtectionService) -->
        <service
            android:name=".ProtectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>
</manifest>
